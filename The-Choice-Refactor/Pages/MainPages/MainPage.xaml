<Page x:Class="The_Choice_Refactor.Pages.MainPages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:The_Choice_Refactor.Pages.MainPages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="MainPage">
    <Page.Resources>
        <ResourceDictionary Source="..\..\Resources\Styles\Styles.xaml"></ResourceDictionary>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="180"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="120"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="300"/>
            <RowDefinition Height="300"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="1" Grid.Column="1" Background="Transparent" Grid.ColumnSpan="10" Grid.RowSpan="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="120"/>
            </Grid.RowDefinitions>
            <Label Content="Reliable information" Grid.Row="0" VerticalAlignment="Top" FontSize="90" Grid.RowSpan="2" Foreground="White" FontWeight="Bold"/>
            <Label Content="in one place" Grid.Row="2" VerticalAlignment="Top" FontSize="90" Foreground="White" FontWeight="Bold"/>
        </Grid>
        <Label Content="An agregator where you can study information about different" FontSize="18" Grid.ColumnSpan="6" Grid.Row="4" Grid.Column="1" Foreground="LightGray" Grid.RowSpan="2"/>
        <Label Content="cryptocurrencies, valuable materials, promotions and" FontSize="18" Grid.ColumnSpan="6" Grid.Row="5" Grid.Column="1" Foreground="LightGray" Grid.RowSpan="2"/>
        <Label Content="currencies, view places to buy and exchange currencies in a" FontSize="18" Grid.ColumnSpan="6" Grid.Row="6" Grid.Column="1" Foreground="LightGray" Grid.RowSpan="2"/>
        <Label Content="comfortable, modern and fast interface" FontSize="18" Grid.ColumnSpan="5" Grid.Row="7" Grid.Column="1" Foreground="LightGray" Grid.RowSpan="2"/>
        <Grid Grid.Column="8" Grid.Row="1" Grid.ColumnSpan="3" Grid.RowSpan="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="10"/>
                <RowDefinition Height="130"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Button x:Name="GoButton" Grid.Row="2" VerticalAlignment="Center" Content="Lets go!" Height="120" Width="250" BorderThickness="0" FontSize="20" Foreground="White">
                <Button.Background>
                    <ImageBrush ImageSource="../../Resources/Pictures/LetsGoButtonDark.png"/>
                </Button.Background>
            </Button>
        </Grid>

        <Grid Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="13" Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="295"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="295"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="295"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="295"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="295"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="295"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="100*"/>
                <RowDefinition Height="50*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Grid.Column="0" Opacity="0.1" CornerRadius="50" Background="White">
                <Button Opacity="0"/>
            </Border>
            <Border Opacity="0.1" Grid.Row="0" CornerRadius="50" Grid.Column="2" Background="White">
                <Button Opacity="0"/>
            </Border>
            <Border  Opacity="0.1" Grid.Row="0" CornerRadius="50" Grid.Column="4" Background="White">
                <Button Opacity="0"/>
            </Border>
            <Border Opacity="0.1" Grid.Row="0" Grid.Column="6" CornerRadius="50"  Background="White">
                <Button Opacity="0"/>
            </Border>
            <Border Opacity="0.1" Grid.Row="0" Grid.Column="8" CornerRadius="50"  Background="White">
                <Button Opacity="0"/>
            </Border>
            <Border Opacity="0.1" Grid.Row="0" Grid.Column="10" CornerRadius="50"  Background="White">
                <Button Opacity="0"/>
            </Border>
            <Button x:Name="LeftArrow_Btn" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Width="20" Height="30" BorderThickness="0" Background="Transparent">
                <Image x:Name="LeftArrow_Img" Source="..\..\Resources\Pictures\LeftArrowWhite.png"/>
            </Button>
            <Button x:Name="RightArrow_Btn" BorderBrush="Transparent" BorderThickness="0" Grid.Row="0" Grid.Column="10" HorizontalAlignment="Right" VerticalAlignment="Center" Width="20" Height="30" Background="Transparent">
                <Image x:Name="RightArrow_Img" Source="..\..\Resources\Pictures\RightArrowWhite.png"/>
            </Button>
        </Grid>
    </Grid>
</Page>
