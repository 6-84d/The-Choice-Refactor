            <Border 
            Background="White"
            Opacity="0.05" 
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Grid.Row="0"
            Grid.RowSpan="15" 
            CornerRadius="50"/>
            <Label
            FontWeight="Bold" 
            Grid.Column="1"
            Grid.Row="1"
            FontSize="15" 
            HorizontalAlignment="Left">
                The Choice
            </Label>
            <Label 
            Grid.Column="2"
            Grid.Row="1" 
            FontSize="15" 
